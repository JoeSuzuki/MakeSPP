<body>

<div class="container">
    <div class="row">
        <div class="col-md-6"><img class="float-left" src="https://as.ftcdn.net/r/v1/pics/ea2e0032c156b2d3b52fa9a05fe30dedcb0c47e3/landing/images_photos.jpg" alt="Profile Picture"></div>
    </div>
    <div class="row">
        <div class="col-md-6"> <h2 class="float-left"> <%= name %></h2></div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6"> <h3 class="float-left"> Friends</h3> </div>
        <div class="col-md-6 float-right"> <h3 class="float-left"> Catergories</h3></div>
    </div>
    <div class="container-fluid float-left" style="width:50%;">
        <div class="row">
            <% for(var i=0; i<friendArray.length; i++){ %>
            <div class="col-md-4">
                <button class="btn btn-block btn-info btn-space"> <%= friendArray[i] %> </button>
            </div>
            <% } %>
        </div>
    </div>
    <div class="container-fluid float-right" style="width:50%; background-color: black;">
        <div class="row">
            <% for(var i=0; i<tagArray.length; i++){ %>
            <div class="col-md-4">
                <button class="btn btn-block btn-info btn-space"> <%= tagArray[i] %> </button>
            </div>
            <% } %>
        </div>
    </div>


    </div>
